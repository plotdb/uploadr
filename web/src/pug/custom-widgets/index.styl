.dropper
  position: relative
  background: rgba(0,0,0,.1)
.dropper input
  width: 100%
  height: 100%
  opacity: 0.01
.dropper:after
  pointer-events: none
  position: absolute
  margin: auto
  inset: 0
  display: flex
  align-items: center
  justify-content: center
  content: "drop file or click here ..."
  opacity: 0.75
  text-align: center

.gallery:empty:after
  display: block
  content: "No file selected. Choose some files to fill here up."
  opacity: 0.75
