doctype html
html
  include @/@loadingio/bootstrap.ext/index.pug
  include @/ldview/index.pug
  include @static/assets/lib/uploadr/dev/server/index.pug
  head
    +css([
      { name: "bootstrap", path: "dist/css/bootstrap.min.css"},
      { name: "@loadingio/bootstrap.ext"},
      { name: "ldcover"},
      { name: "ldloader"},
      { name: "ldnotify"},
      { name: "ldiconfont"},
      { name: "uploadr", version: "dev"},
      { url: "/css/index.css"}
    ])

  body
    .w-1024.rwd.typeset.heading-contrast.mx-auto.p-4
      .d-flex.align-items-end
        .flex-grow-1
          h2 uploadr
          p file uploader widgets and express route
        div
          .btn.btn-primary(ld="toggle-uploader") Upload #[i.i-upload]
          .btn.btn-primary.ml-2(ld="toggle-chooser") Choose #[i.i-book]
      hr

      .ldcv.default-size(ld="ldcv-uploadr"): .base: .inner
        +uploadr({name: "uploadr", type: "file"})

      .ldcv.default-size(ld="ldcv-chooser"): .base
        #chooserroot.inner.d-flex.flex-column
          .flex-grow-1
            +uploadr-viewer({name: "uploadr-viewer", type: "file"})
          .d-flex.justify-content-end.p-2
            .btn.btn-primary(data-ldcv-set="") Close

      .card.w-100.mx-auto.rwd.shadow.mb-4: .card-body.p-2
        +scope("file-viewer").d-flex.flex-wrap
          .d-none(ld="empty") no files uploaded
          .d-flex.align-items-center.justify-content-center.bg-light.border.rounded-sm(ld-each="file",style="width:300px;height:200px;background-size:cover;background-position:center center;background-repeat:no-repeat")
      .card.w-100.mx-auto.rwd.shadow: .card-body.p-2
        +uploadr-viewer({name: "uploadr-viewer2", type: "file"})
    +script([
      {name: "@loadingio/debounce.js"},
      {name: "@loadingio/ldquery"},
      {name: "@loadingio/paginate"},
      {name: "proxise"},
      {name: "ldview"},
      {name: "ldnotify"},
      {name: "ldcover"},
      {name: "ldloader"},
      {name: "uploadr", version: "dev", path: "index.js"},
      {name: "uploadr", version: "dev", path: "providers/gcs/index.min.js"},
      {name: "uploadr", version: "dev", path: "providers/native/index.min.js"}
    ])
    script(type="module"): include:lsc index.ls
